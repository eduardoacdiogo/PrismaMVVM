<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_CEP_PrimeiraEntrega.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="correios.jpg"/>
        
        <Entry Placeholder="{Binding Cep}" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" Text="{Binding Cep}"/>
        
        <Button Text="Buscar CEP" TextColor="#FFFFFF" BackgroundColor="#00416B"
                Command="{Binding ClickNavigationCommand}"/>
        
        <Label Text="{Binding RESULTADO}"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

    </StackLayout>

</ContentPage>