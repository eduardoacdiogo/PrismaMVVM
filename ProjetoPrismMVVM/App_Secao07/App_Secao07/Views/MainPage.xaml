<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Secao07.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="FillAndExpand" Spacing="30" Padding="10">

        <Button Text="Absolute" VerticalOptions="Center" Clicked="ActionGoAbsolute"/>

        <Button Text="Grid" VerticalOptions="Center" Clicked="ActionGoGrid" />

        <Button Text="Relative" VerticalOptions="Center" Clicked="ActionGoRelative" />

        <Button Text="Scroll" VerticalOptions="Center" Clicked="ActionGoScroll" />

        <Button Text="Stack" VerticalOptions="Center" Clicked="ActionGoStack" />
        
    </StackLayout>

</ContentPage>