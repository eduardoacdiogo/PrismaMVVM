<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="App_Lembrete.Views.TerceiraPage">
    
    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">

        <Image Source="correios.jpg"/>

        <Entry Placeholder="{Binding Cep}" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" Text="{Binding Cep}"/>

        <Button Text="Buscar CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" Command="{Binding ClickNavigationCommand}"/>

        <Label Text="{Binding RESULTADO}" VerticalOptions="Center" HorizontalOptions="Center"/>
        
    </StackLayout>

</ContentPage>