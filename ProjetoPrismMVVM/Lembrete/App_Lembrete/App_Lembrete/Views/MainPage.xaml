<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Lembrete.Views.MainPage"
             Title="{Binding Title}">

    <ContentPage.Content>

        <StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="30">
                <Button Text="Lista de Lembretes" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ActionGoLembretes" Padding="10"/>
                
                <Button Text="Consultar CEP" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ActionGoConsultarCep" Padding="10"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>